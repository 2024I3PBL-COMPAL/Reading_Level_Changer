{
  "name": "PBL-Reading Level Changer",
  "description": "PBL Extension for Reading Level Changer",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "main.html",
    "default_icon": "ic.png"
  },
  "permissions": ["activeTab", "contextMenus", "storage", "scripting"],
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "ic.png",
    "48": "ic.png",
    "128": "ic.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/contents.js"]
    }
  ]
}
